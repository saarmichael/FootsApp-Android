<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:padding="4dp">

    <TextView
        android:id="@+id/message_received_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Theme.msg_received"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintWidth_max="wrap"

        android:textSize="13sp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/message_received_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/Theme.text_view"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/message_received_text"
        app:layout_constraintTop_toBottomOf="@+id/message_received_text" />

</androidx.constraintlayout.widget.ConstraintLayout>